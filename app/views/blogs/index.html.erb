<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.body %></td>
        <td><button><%= link_to blog.status.titleize, toggle_status_blog_path(blog), method: :patch %></button></td>
        <td><button><%= link_to 'Show', blog %></button></td>
        <td><button><%= link_to 'Edit', edit_blog_path(blog) %></button></td>
        <td><button><%= link_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

