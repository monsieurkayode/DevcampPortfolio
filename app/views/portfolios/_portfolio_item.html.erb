<h2><%= portfolio_item.title %></h2>
<a href="<%= portfolio_path(portfolio_item) %>">
  <%= image_tag portfolio_item.thumb_image %>
</a>
<h3><%= portfolio_item.subtitle %></h3>
<p><%= portfolio_item.body.slice(0..255) %><%= portfolio_item.body.length > 300 && '...' %></p>
<% if logged_in? :site_admin %>
  <%= link_to 'Edit', edit_portfolio_path(portfolio_item) %> |
  <%= link_to 'Delete', portfolio_item, method: :delete, data: { confirm: 'Delete portfolio item?'} %>
<% end %>
